<Page x:Class="Magazine.PricesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Цены" 
        Height="450" 
        Width="800"
        Background="AliceBlue">
    <Grid>
        <!-- Панель заголовка -->
        <DockPanel Background="LightGray" Height="40" VerticalAlignment="Top" >
            <TextBlock Text="Цены" 
                       VerticalAlignment="Center" 
                       FontSize="16" 
                       Margin="10,0,0,0"/>
            <Button Content="X" 
                    Width="30" 
                    Height="30" 
                    DockPanel.Dock="Right" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Black" 
                    FontWeight="Bold" 
                    Click="CloseButton_Click" HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- Основное содержимое -->
        <TextBlock Text="Содержимое окна 'Цены'" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,50,0,0"/>
    </Grid>
</Page>